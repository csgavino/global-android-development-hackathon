<resources>

    <style name="mainTheme">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="scrollContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parentContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="innerContainer">
        <item name="android:padding">15dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="actionbarContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54dip</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text.lemon">
        <item name="android:textColor">@color/green</item>
        <item name="android:paddingLeft">20dip</item>
    </style>

    <style name="text.tracker">
    </style>

    <style name="category">
        <item name="android:background">@drawable/background_stripe</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dip</item>
    </style>

    <style name="banner">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="h1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cellHeader</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="h2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cellBlurb</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="footer">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="description">
        <item name="android:textColor">@color/cellBlurb</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="hr">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>
    </style>

    <style name="hr.gray">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">6dip</item>
    </style>

    <style name="dashboard">
        <item name="android:background">@color/dashboard</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">12dip</item>
    </style>

</resources>